<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/displayName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/customer_45"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:padding="20dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/displayAddress"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/address_45"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:padding="20dp" />

        <TextView
            android:id="@+id/displayMobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:autoLink="phone"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/contact_45"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:padding="20dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/displaySellingDate"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/selling_date_45"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:padding="20dp"
            android:singleLine="true" />

        <TextView
            android:id="@+id/displayServiceCount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#fff"
            android:clickable="true"
            android:drawableLeft="@drawable/service_count_45"
            android:textSize="20sp"
            android:drawablePadding="20dp"
            android:elevation="4dp"
            android:padding="20dp"
            android:singleLine="true" />

    </LinearLayout>

</ScrollView>